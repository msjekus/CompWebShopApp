@using CompWebShopApp.Model.ViewModels.Roles
@model ChangeRolesVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Зміна ролей користувача @(Model.Email)?</h1>
<hr />
<form method="post">
    <input type="hidden" asp-for="Id" />
    @foreach(var role in Model.AllRoles!)
    {
        <input type="checkbox" name="roles[]"
        value="@role.Name"@(Model.UserRoles!.Contains(role.Name!) 
        ? "checked" : "")/>
		<span>@role.Name</span><br/>
    }
    <div class="mb-3">
		<button type="submit" class="btn btn-outline-primary">Зберегти</button>
    </div>
</form>